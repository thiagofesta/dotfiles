// "IntelliJ IDEA Keybindings" plugin handles almost everything. Minor updates were done.
[
  // Update "cmd+p" to open file + remove old "shift+cmd+o" from "IntelliJ IDEA Keybindings" plugin
  {
    "key": "shift+cmd+o",
    "command": "-workbench.action.gotoSymbol"
  },
  {
    "key": "cmd+p",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "shift+cmd+o",
    "command": "-workbench.action.quickOpen"
  },

  // Also remove triggerParameterHints from "cmd+p" added by "IntelliJ IDEA Keybindings" plugin
  {
    "key": "cmd+p",
    "command": "-editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus"
  },

  // "cmd+home" goes to first line of the file instead of "cmd+up"
  {
    "key": "cmd+home",
    "command": "cursorTop",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+up",
    "command": "-cursorTop",
    "when": "textInputFocus"
  },

  // "shift+cmd+home" goes to first line of the file with a selection instead of "shift+cmd+up"
  {
    "key": "shift+cmd+home",
    "command": "cursorTopSelect",
    "when": "textInputFocus"
  },
  {
    "key": "shift+cmd+up",
    "command": "-cursorTopSelect",
    "when": "textInputFocus"
  },

  // "cmd+end" goes to last line of the file instead of "cmd+down"
  {
    "key": "cmd+end",
    "command": "cursorBottom",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+down",
    "command": "-cursorBottom",
    "when": "textInputFocus"
  },

  // "shift+cmd+end" goes to last line of the file with a selection instead of "shift+cmd+down"
  {
    "key": "shift+cmd+end",
    "command": "cursorBottomSelect",
    "when": "textInputFocus"
  },
  {
    "key": "shift+cmd+down",
    "command": "-cursorBottomSelect",
    "when": "textInputFocus"
  },

  // Ember Related Files plugin
  {
    "key": "alt+cmd+p",
    "command": "extension.relatedFiles"
  },
  {
    "key": "alt+cmd+r",
    "command": "-extension.relatedFiles"
  },

  // Moving cmd+d to cmd+alt+d to duplicate line
  {
    "key": "alt+cmd+d",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  // Rebinding cmd+d to "Add selection to next Find match"
  {
    "key": "cmd+d",
    "command": "-editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+d",
    "command": "-editor.action.duplicateSelection",
    "when": "editorHasSelection && editorTextFocus && !editorReadonly"
  }
]

